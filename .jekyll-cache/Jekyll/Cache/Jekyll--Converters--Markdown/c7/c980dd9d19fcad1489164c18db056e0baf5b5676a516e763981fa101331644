<span class="katex-display"><span class="katex"><span class="katex-mathml"><math xmlns="http://www.w3.org/1998/Math/MathML"><semantics><mtable rowspacing="0.24999999999999992em" columnalign="right left" columnspacing="0em"><mtr><mtd><mstyle scriptlevel="0" displaystyle="true"><msub><mtext mathvariant="monospace">crs</mtext><mrow><mi>b</mi><mi>p</mi></mrow></msub></mstyle></mtd><mtd><mstyle scriptlevel="0" displaystyle="true"><mrow><mrow></mrow><mo>=</mo><mo stretchy="false">{</mo><mtext mathvariant="bold">g</mtext><mo separator="true">,</mo><mtext mathvariant="bold">h</mtext><mo>âˆˆ</mo><msup><mi mathvariant="double-struck">G</mi><mrow><mi>n</mi><mo>â‹…</mo><mi>m</mi></mrow></msup><mo separator="true">,</mo><mtext>Â </mtext><mi>g</mi><mo separator="true">,</mo><mi>h</mi><mo>âˆˆ</mo><mi mathvariant="double-struck">G</mi><mo separator="true">,</mo><mtext>Â </mtext><mtext mathvariant="bold">V</mtext><mo>=</mo><mo stretchy="false">(</mo><msub><mi>V</mi><mn>1</mn></msub><mo separator="true">,</mo><msub><mi>V</mi><mn>2</mn></msub><mo separator="true">,</mo><mo>â€¦</mo><mo separator="true">,</mo><msub><mi>V</mi><mi>m</mi></msub><mo stretchy="false">)</mo><mo>âˆˆ</mo><msup><mi mathvariant="double-struck">G</mi><mi>m</mi></msup><mo stretchy="false">}</mo></mrow></mstyle></mtd></mtr><mtr><mtd><mstyle scriptlevel="0" displaystyle="true"><msub><mtext mathvariant="monospace">wit</mtext><mrow><mi>b</mi><mi>p</mi></mrow></msub></mstyle></mtd><mtd><mstyle scriptlevel="0" displaystyle="true"><mrow><mrow></mrow><mo>=</mo><mo stretchy="false">{</mo><mtext mathvariant="bold">a</mtext><mo separator="true">,</mo><mi mathvariant="bold">f</mi><mo>âˆˆ</mo><msubsup><mi mathvariant="double-struck">Z</mi><mi>q</mi><mi>m</mi></msubsup><mo stretchy="false">}</mo></mrow></mstyle></mtd></mtr><mtr><mtd><mstyle scriptlevel="0" displaystyle="true"><msub><mtext mathvariant="monospace">stmt</mtext><mrow><mi>b</mi><mi>p</mi></mrow></msub></mstyle></mtd><mtd><mstyle scriptlevel="0" displaystyle="true"><m